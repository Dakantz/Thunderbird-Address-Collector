    "version": "0.2.0",
    "configurations": [
        {
            "name": "Thunderbird Add-on Debug",
            "type": "firefox",
            "reAttach": true,
            "firefoxExecutable": "/Applications/Thunderbird.app/Contents/MacOS/thunderbird",
            "reloadOnChange": {
                "watch": "${workspaceFolder}/**/*.js",
                "ignore": "**/node_modules/**"
            },
            "profileDir": "~/thunderbird-test",
            "keepProfileChanges": true,
            "internalConsoleOptions": "openOnSessionStart",
            "addonPath": "${workspaceFolder}/",
            "request": "launch"
        },
    ]
}